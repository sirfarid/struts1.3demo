<!DOCTYPE struts-config PUBLIC
  "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
  "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
  <form-beans>
    <form-bean name="helloForm" type="org.example.form.HelloForm"/>
    <form-bean name="loginForm" type="org.example.form.LoginForm"/>
  </form-beans>

  <global-forwards>
    <forward name="login" path="/login.jsp"/>
    <forward name="home" path="/home.jsp"/>
    <forward name="error" path="/error.jsp"/>
  </global-forwards>

  <action-mappings>
    <action path="/hello"
            name="helloForm"
            type="org.example.action.HelloAction"
            input="/hello.jsp">
      <forward name="success" path="/welcome.jsp"/>
    </action>

    <!-- Login Action -->
    <action path="/login"
            type="org.example.action.LoginAction"
            name="loginForm"
            scope="request"
            validate="true"
            input="/login.jsp">
      <forward name="success" path="/hello.jsp" redirect="true"/>
      <forward name="failure" path="/login.jsp"/>
    </action>

    <!-- Logout Action -->
    <action path="/logout"
            type="org.example.action.LogoutAction">
      <forward name="logout" path="/login.jsp" redirect="true"/>
    </action>

    <!-- Protected Action Example -->
    <action path="/secureAction"
            type="org.example.action.SecureAction">
      <forward name="success" path="/securePage.jsp"/>
    </action>
  </action-mappings>

  <message-resources parameter="org.example.i18n.MessageBundle"/>
</struts-config>